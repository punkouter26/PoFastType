@page "/diag"
@using PoFastType.Shared.Models
@inject HttpClient Http
@inject ILogger<Diag> Logger

<PageTitle>Diagnostics</PageTitle>

<div class="game-container page-content">
    <div class="row">
        <div class="col-12">
            <div class="card retro-card">
                <div class="card-header retro-card-header">
                    <h3 class="mb-0">System Diagnostics</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <h4 class="alert-heading">Diagnostics Error</h4>
                            <p>@error</p>
                        </div>
                    }                    else
                    {
                        @if (healthResponse != null)
                        {
                            <div class="row mb-4">
                                <div class="col-12">                                    <div class="alert @GetOverallStatusClass(healthResponse.Status)" role="alert">
                                        <h5 class="alert-heading">
                                            <i class="bi @GetOverallStatusIcon(healthResponse.Status)"></i>
                                            Overall System Status: @healthResponse.Status                                        </h5>
                                        <small class="text-muted">Last checked: @healthResponse.Timestamp.ToString("yyyy-MM-dd HH:mm:ss") UTC</small>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="table-responsive">
                            <table class="table table-bordered align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 35%">Check</th>
                                        <th style="width: 15%">Status</th>
                                        <th style="width: 50%">Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var check in diagChecks)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@check.Name</strong>
                                            </td>
                                            <td>
                                                @if (check.Status == "OK")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle-fill"></i> OK
                                                    </span>
                                                }
                                                else if (check.Status == "Warning")
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-exclamation-triangle-fill"></i> Warning
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle-fill"></i> Error
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <span class="@(check.Status == "Error" ? "text-danger" : check.Status == "Warning" ? "text-warning" : "text-success")">
                                                    @check.Message
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                                <div class="text-center mt-4">
                            <button class="btn btn-outline-primary" @onclick="RunDiagnostics">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<DiagCheckResult> diagChecks = new();
    private bool isLoading = true;
    private string? error;
    private DiagHealthResponse? healthResponse;

    protected override async Task OnInitializedAsync()
    {
        await RunDiagnostics();
    }

    private async Task RunDiagnostics()
    {
        isLoading = true;
        error = null;
        diagChecks.Clear();
        healthResponse = null;
        StateHasChanged();

        try
        {
            // Check backend health using the new /api/health endpoint
            var response = await Http.GetAsync("api/health");
            if (response.IsSuccessStatusCode)
            {
                var contentType = response.Content.Headers.ContentType?.MediaType;
                if (contentType != "application/json")
                {
                    var content = await response.Content.ReadAsStringAsync();
                    error = $"API returned unexpected content type: {contentType}. Content: {content.Substring(0, Math.Min(200, content.Length))}...";
                    Logger.LogWarning("Health API returned unexpected content type: {ContentType}", contentType);
                    return;
                }

                var result = await response.Content.ReadFromJsonAsync<HealthCheckResponse>();
                if (result != null)
                {
                    healthResponse = new DiagHealthResponse
                    {
                        Status = result.Status,
                        Timestamp = DateTime.UtcNow
                    };

                    // Convert health checks to diag checks
                    diagChecks = result.Checks.Select(c => new DiagCheckResult
                    {
                        Name = c.Name,
                        Status = c.Status == "Healthy" ? "OK" : c.Status == "Degraded" ? "Warning" : "Error",
                        Message = c.Description ?? "No description available"
                    }).ToList();
                }
                else
                {
                    error = "API returned null response";
                    Logger.LogWarning("Health API returned null response");
                }
            }
            else
            {
                var content = await response.Content.ReadAsStringAsync();
                error = $"Failed to contact backend: {response.StatusCode}. Response: {content.Substring(0, Math.Min(200, content.Length))}...";
                Logger.LogWarning("Health API error: {StatusCode}, Content: {Content}", response.StatusCode, content);
            }
        }
        catch (Exception ex)
        {
            error = $"An error occurred while running diagnostics: {ex.Message}";
            Logger.LogError(ex, "Diagnostics error");
        }

        isLoading = false;
        StateHasChanged();
    }

    private string GetOverallStatusClass(string status)
    {
        return status switch
        {
            "OK" => "alert-success",
            "Warning" => "alert-warning",
            "Error" => "alert-danger",
            _ => "alert-secondary"
        };
    }

    private string GetOverallStatusIcon(string status)
    {
        return status switch
        {
            "OK" => "bi-check-circle-fill",
            "Warning" => "bi-exclamation-triangle-fill",
            "Error" => "bi-x-circle-fill",
            _ => "bi-info-circle-fill"
        };
    }
}