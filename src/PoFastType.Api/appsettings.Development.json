{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.AspNetCore.HttpsPolicy": "Error",
        "Microsoft.Hosting.Lifetime": "Information",
        "PoFastType.Api.Middleware": "Information",
        "PoFastType.Api.Controllers": "Information",
        "PoFastType.Api.Services.HealthChecks": "Warning"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Warning",
      "Microsoft.AspNetCore.Mvc": "Warning",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "PoFastType.Api.Middleware": "Information",
      "PoFastType.Api.Controllers": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    },
    "Console": {
      "IncludeScopes": false
    }
  },
  "DebugSettings": {
    "EnableClientLogging": true,
    "EnableNetworkMonitoring": true,
    "EnableVerboseLogging": true,
    "LogPath": "../DEBUG/log.txt",
    "ClientLogPath": "../DEBUG/client-logs.txt",
    "NetworkLogPath": "../DEBUG/network-activity.txt",
    "OverwriteLogOnStartup": true,
    "MinimumLogLevel": "Debug"
  },
  "AzureTableStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "TableName": "PoFastTypeGameResults"
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "AllowedHosts": "*"
}
