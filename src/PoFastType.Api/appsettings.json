{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "../DEBUG/log.txt",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Infinite",
          "rollOnFileSizeLimit": false,
          "shared": false,
          "flushToDiskInterval": "00:00:01"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "PoFastType"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DebugSettings": {
    "EnableClientLogging": true,
    "EnableNetworkMonitoring": true,
    "LogPath": "../DEBUG/log.txt",
    "ClientLogPath": "../DEBUG/client-logs.txt",
    "NetworkLogPath": "../DEBUG/network-activity.txt",
    "OverwriteLogOnStartup": true,
    "MinimumLogLevel": "Debug"
  },
  "AzureTableStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "TableName": "PoFastTypeGameResults"
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "AzureKeyVault": {
    "VaultUri": "https://pofasttype-kv.vault.azure.net/"
  }
}
