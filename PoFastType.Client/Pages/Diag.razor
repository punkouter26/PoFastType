@page "/diag"
@inject HttpClient Http
@inject ILogger<Diag> Logger

<PageTitle>Diagnostics</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">System Diagnostics</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-3">Running diagnostics...</p>
                        </div>
                    }
                    else if (error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <h4 class="alert-heading">Diagnostics Error</h4>
                            <p>@error</p>
                            <button class="btn btn-outline-danger" @onclick="RunDiagnostics">Try Again</button>
                        </div>
                    }                    else
                    {
                        @if (healthResponse != null)
                        {
                            <div class="row mb-4">
                                <div class="col-12">
                                    <div class="alert @GetOverallStatusClass(healthResponse.OverallStatus)" role="alert">
                                        <h5 class="alert-heading">
                                            <i class="bi @GetOverallStatusIcon(healthResponse.OverallStatus)"></i>
                                            Overall System Status: @healthResponse.OverallStatus
                                        </h5>
                                        @if (healthResponse.Summary != null)
                                        {
                                            <p class="mb-0">
                                                <strong>@healthResponse.Summary.SuccessfulChecks</strong> successful, 
                                                <strong>@healthResponse.Summary.WarningChecks</strong> warnings, 
                                                <strong>@healthResponse.Summary.ErrorChecks</strong> errors 
                                                out of <strong>@healthResponse.Summary.TotalChecks</strong> total checks
                                            </p>
                                        }
                                        <small class="text-muted">Last checked: @healthResponse.Timestamp.ToString("yyyy-MM-dd HH:mm:ss") UTC</small>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="table-responsive">
                            <table class="table table-bordered align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 35%">Check</th>
                                        <th style="width: 15%">Status</th>
                                        <th style="width: 50%">Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var check in diagChecks)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@check.Name</strong>
                                            </td>
                                            <td>
                                                @if (check.Status == "OK")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle-fill"></i> OK
                                                    </span>
                                                }
                                                else if (check.Status == "Warning")
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-exclamation-triangle-fill"></i> Warning
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle-fill"></i> Error
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <span class="@(check.Status == "Error" ? "text-danger" : check.Status == "Warning" ? "text-warning" : "text-success")">
                                                    @check.Message
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-4">
                            <button class="btn btn-outline-primary" @onclick="RunDiagnostics">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<DiagCheckResult> diagChecks = new();
    private bool isLoading = true;
    private string? error;
    private DiagHealthResponse? healthResponse;

    protected override async Task OnInitializedAsync()
    {
        await RunDiagnostics();
    }

    private async Task RunDiagnostics()
    {
        isLoading = true;
        error = null;
        diagChecks.Clear();
        healthResponse = null;
        StateHasChanged();

        try
        {
            // Check backend health
            var response = await Http.GetAsync("api/diag/health");
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<DiagHealthResponse>();
                if (result != null)
                {
                    healthResponse = result;
                    diagChecks = result.Checks;
                }
            }
            else
            {
                error = $"Failed to contact backend: {response.StatusCode}";
                Logger.LogWarning("Diagnostics API error: {StatusCode}", response.StatusCode);
            }
        }
        catch (Exception ex)
        {
            error = "An error occurred while running diagnostics.";
            Logger.LogError(ex, "Diagnostics error");
        }

        isLoading = false;
        StateHasChanged();
    }

    private string GetOverallStatusClass(string status)
    {
        return status switch
        {
            "OK" => "alert-success",
            "Warning" => "alert-warning",
            "Error" => "alert-danger",
            _ => "alert-secondary"
        };
    }

    private string GetOverallStatusIcon(string status)
    {
        return status switch
        {
            "OK" => "bi-check-circle-fill",
            "Warning" => "bi-exclamation-triangle-fill",
            "Error" => "bi-x-circle-fill",
            _ => "bi-info-circle-fill"
        };
    }

    public class DiagCheckResult
    {
        public string Name { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
        public string Message { get; set; } = string.Empty;
    }

    public class DiagHealthResponse
    {
        public string OverallStatus { get; set; } = string.Empty;
        public List<DiagCheckResult> Checks { get; set; } = new();
        public DateTime Timestamp { get; set; }
        public DiagSummary? Summary { get; set; }
    }

    public class DiagSummary
    {
        public int TotalChecks { get; set; }
        public int SuccessfulChecks { get; set; }
        public int WarningChecks { get; set; }
        public int ErrorChecks { get; set; }
    }
}